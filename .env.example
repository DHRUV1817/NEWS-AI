# NewsNinja 2.0 - Environment Configuration Template
# Copy this file to .env and customize the values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# API Keys (Optional - works without these)
HUGGINGFACE_API_KEY=""
# OPENAI_API_KEY=""
# NEWS_API_KEY=""

# Server Configuration
BACKEND_HOST="0.0.0.0"
BACKEND_PORT="1234"
FRONTEND_PORT="8501"

# =============================================================================
# OPTIONAL SETTINGS (Defaults provided)
# =============================================================================

# Cache Settings
CACHE_DURATION_MINUTES=30
CACHE_AUTO_CLEANUP="true"

# Audio Settings
DEFAULT_TTS_LANGUAGE="en"
AUDIO_CLEANUP_DAYS=1

# Performance Settings
REQUEST_TIMEOUT=30
MAX_TOPICS_PER_REQUEST=5
RATE_LIMIT_DELAY=2

# Feature Flags
ENABLE_REDDIT_SCRAPING="true"
ENABLE_NEWS_SCRAPING="true"
ENABLE_SENTIMENT_ANALYSIS="true"
DEBUG_MODE="false"

# =============================================================================
# PRODUCTION SETTINGS (Change for deployment)
# =============================================================================

ENVIRONMENT="development"
SECRET_KEY="change-this-in-production"
CORS_ORIGINS="http://localhost:3000,http://localhost:8501"